[package]
name = "rthrift"
description = "Rust bindings for the Apache Thrift RPC system"
version = "0.11.0"
license = "Apache-2.0"
authors = ["okanon <flat.cydia37jins.pc@gmail.com>"]
homepage = "https://twitter.com/@xlyr_cs"
documentation = "https://thrift.apache.org"
license-file = "LICENSE"
readme = "README.md"
exclude = ["Makefile*", "test/**"]
keywords = ["thrift", "rthrift"]

[dependencies]
byteorder = "~1.1.0"
integer-encoding = "~1.0.4"
log = "~0.3.8"
threadpool = "~1.7.1"
try_from = "~0.2.2"

[lib]
name = "rthrift"
path = "src/lib.rs"
